<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto" >

    <PreferenceCategory
        android:key="Pref_General_Category"
        android:title="@string/pref_category_title_general" >
        
        <com.aircandi.ui.widgets.AirListPreference
            android:id="@+id/Pref_Search_Radius"
            android:defaultValue="@string/pref_search_radius_default"
            android:dialogTitle="@string/pref_search_radius_dialog_title"
            android:entries="@array/search_radius_entries"
            android:entryValues="@array/search_radius_values"
            android:negativeButtonText="@string/pref_dialog_cancel"
            android:positiveButtonText="@string/pref_dialog_ok"
            android:title="@string/pref_search_radius_title"
            custom:keyId="@string/pref_search_radius" />
        
        <com.aircandi.ui.widgets.AirListPreference
            android:id="@+id/Pref_Theme"
            android:defaultValue="@string/pref_theme_default"
            android:dialogTitle="@string/pref_theme_dialog_title"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            android:negativeButtonText="@string/pref_dialog_cancel"
            android:positiveButtonText="@string/pref_dialog_ok"
            android:title="@string/pref_theme_title"
            custom:keyId="@string/pref_theme" />
        
        <com.aircandi.ui.widgets.AirListPreference
            android:id="@+id/Pref_Place_Provider"
            android:defaultValue="@string/pref_place_provider_default"
            android:dialogTitle="@string/pref_place_provider_dialog_title"
            android:entries="@array/place_provider_entries"
            android:entryValues="@array/place_provider_values"
            android:negativeButtonText="@string/pref_dialog_cancel"
            android:positiveButtonText="@string/pref_dialog_ok"
            android:summary="@string/pref_place_provider_summary"
            android:title="@string/pref_place_provider_title"
            custom:keyId="@string/pref_place_provider" />

        <PreferenceScreen
            android:key="Pref_Notifications_Screen"
            android:title="Notifications" >
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Candigrams"
                android:defaultValue="@bool/pref_notifications_candigrams_default"
                android:summary="@string/pref_notifications_candigrams_summary"
                android:title="@string/pref_notifications_candigrams_title"
                custom:keyId="@string/pref_messages_candigrams" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Pictures"
                android:defaultValue="@bool/pref_notifications_pictures_default"
                android:summary="@string/pref_notifications_pictures_summary"
                android:title="@string/pref_notifications_pictures_title"
                custom:keyId="@string/pref_messages_pictures" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Comments"
                android:defaultValue="@bool/pref_notifications_comments_default"
                android:summary="@string/pref_notifications_comments_summary"
                android:title="@string/pref_notifications_comments_title"
                custom:keyId="@string/pref_messages_comments" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Nearby"
                android:defaultValue="@bool/pref_notifications_nearby_default"
                android:summary="@string/pref_notifications_nearby_summary"
                android:title="@string/pref_notifications_nearby_title"
                custom:keyId="@string/pref_messages_nearby" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Watch"
                android:defaultValue="@bool/pref_notifications_watch_default"
                android:summary="@string/pref_notifications_watch_summary"
                android:title="@string/pref_notifications_watch_title"
                custom:keyId="@string/pref_messages_watch" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Notifications_Own"
                android:defaultValue="@bool/pref_notifications_own_default"
                android:summary="@string/pref_notifications_own_summary"
                android:title="@string/pref_notifications_own_title"
                custom:keyId="@string/pref_messages_own" />
            
            <com.aircandi.ui.widgets.AirCheckBoxPreference
                android:id="@+id/Pref_Sound_Effects"
                android:defaultValue="@bool/pref_sound_effects_default"
                android:summary="@string/pref_sound_effects_summary"
                android:title="@string/pref_sound_effects_title"
                custom:keyId="@string/pref_sound_effects" />
        </PreferenceScreen>

        <Preference
            android:key="Pref_Feedback"
            android:title="Feedback" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="Pref_About_Category"
        android:title="@string/pref_category_title_about" >
        <Preference
            android:key="Pref_About"
            android:title="About" />
    </PreferenceCategory>

</PreferenceScreen>