<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundHelp"
    android:clickable="true"
    android:onClick="onHelpClick"
    tools:ignore="Overdraw" >

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/add_places"
        style="@style/balloon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        custom:textId="@string/help_place_add" />

    <com.aircandi.ui.widgets.AirTextView
        style="@style/balloon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/add_places"
        android:layout_centerInParent="true"
        custom:textId="@string/help_place_candigrams" />

</RelativeLayout>