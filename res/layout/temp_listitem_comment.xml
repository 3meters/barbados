<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.aircandi.ui.widgets.AirImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_image"
            android:clickable="true"
            android:onClick="onEntityClick"
            android:src="@drawable/img_placeholder_logo_bw"
            custom:sizeHint="@dimen/image_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/dummy_name"
                android:textStyle="bold"
                custom:textId="@string/dummy_name" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/separator"
                style="@style/bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_name"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                custom:textId="@string/symbol_bullet" />

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/user_name"
                custom:textId="@string/dummy_location" />
        </RelativeLayout>

        <com.aircandi.ui.widgets.AirTextLight
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/dummy_message"
            custom:textId="@string/dummy_message" />

        <LinearLayout
            android:id="@+id/actions_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColorSecondary"
                custom:textId="@string/dummy_datetime" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.aircandi.ui.widgets.EntityView
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button_overflow"
                android:background="@drawable/selector_button"
                android:clickable="true"
                android:onClick="onEntityClick"
                custom:label="@string/label_comment_parent" />

            <com.aircandi.ui.widgets.ComboButton
                android:id="@+id/button_overflow"
                style="@style/button_link"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:minWidth="@dimen/button_height"
                android:onClick="onOverflowButtonClick"
                custom:drawable="?attr/iconOverflow"
                custom:layout="@layout/widget_combo_button_no_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>